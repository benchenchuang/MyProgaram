/* pages/about/index.wxss */
page{
  background: #fff;
}
.show_image{
  width: 100%;
  vertical-align: top;
}
.location_btn{
  margin: 30rpx;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background: #3876ff;
}
.other_company{
  margin: 30rpx;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  color: #3876ff;
  text-align: center;
  border: 1px solid #3876ff;
}
.form{
  display: block;
  width: 100%;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #666;
  box-sizing: border-box;
}
.form .form_item{
  padding: 20rpx 0;
  line-height: 68rpx;
  margin: 30rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.form .form_item .label{
  margin-right: 30rpx;
}
.form_item .label text{
  margin-right: 6rpx;
  color: #a11f26;
  vertical-align: middle;
}
.form .form_item .txt{
  height: 68rpx;
  line-height: 68rpx;
}
.form_item .area{
  margin-top: 20rpx;
  line-height: 1.5;
  width: 100%;
  height: 160rpx;
}
.btn_area button{
  margin: 30rpx 0;
  color: #fff;
  background: #a11f26;
}