/* pages/talent/index.wxss */
.search_box{
  padding: 30rpx;
  background: #fff;
}
.search_box input{
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: #f6f6f6;
  border-radius: 80rpx;
  box-sizing: border-box;
}
.jobs_tabs{
  position: relative;
  width: 100%;
  padding-left: 140rpx;
  height: 70rpx;
  line-height: 56rpx;
  box-sizing: border-box;
}
.jobs_tabs .tab_bg{
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.job_tab{
  position: relative;
  z-index: 1;
  margin-left: 12rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #333;
  font-weight: 700;
}
.job_tab.on{
  color: #a0222b;
  border-bottom: 5rpx solid #a0222b;
}
.btn_area{
  padding: 30rpx 140rpx;
  background: #fff;
}
.btn_area .more_btn{
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #a0222b;
  border-radius: 68rpx;
}
.urgent{
  margin-top: 20rpx;
  padding: 20rpx 0 30rpx;
  background: #fff;
}
.urgent_header{
  position: relative;
  width: 100%;
  padding-left: 100rpx;
  padding-right: 30rpx;
  height: 77rpx;
  line-height: 77rpx;
  box-sizing: border-box;
}
.urgent_header .urgent_bg{
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.urgent_title{
  position: relative;
  z-index: 1;
}
.urgent_title .title{
  display: inline-block;
}
.urgent_title .more{
  float: right;
  font-size: 24rpx;
  color: #a0222b;
}
.no_data{
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  background: #fff;
}