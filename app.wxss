/**app.wxss**/
@import "/wxParse/wxParse.wxss";
page{
  background: #f7f7f7;
}
.show_image{
  width: 100%;
}
.flex {
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
}
.flex_item{
  flex: 1;
  -webkit-flex:1;
}
.container{
  padding: 0 30rpx 30rpx;
  font-size: 26rpx;
  color: #666;
  background: #fff;
  text-indent: 48rpx;
  line-height: 1.8;
}
.container .sub_content{
  text-indent: 0;
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 1.8;
}
.container .show_code{
  text-indent: 0;
  margin: 30rpx 60rpx;
  padding: 20rpx;
  text-align:center;
  color: #888;
  border: 1px solid #e6e6e6;
}
.show_code .code_title{
  font-size: 30rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px dashed #e6e6e6;
}
.show_code .code_sub_title{
  font-size: 26rpx;
  padding-top: 10rpx;
}
.show_code .code{
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
}
